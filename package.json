{
  "name": "m12e",
  "version": "0.0.1",
  "scripts": {
    "assets": "webpack --color",
    "assets:watch": "cross-env NODE_ENV=development npm run assets --watch",
    "build": "npm run clean && cross-env NODE_ENV=production npm run assets",
    "dev": "concurrently 'npm run assets:watch' 'npm run serve' --names 'ðŸ“¦,ðŸ–¥' --prefix '[{name}] ' --kill-others",
    "clean": "rm -rf dist",
    "serve": "serve -S ./dist -p 3000",
    "serve:prod": "cross-env NODE_ENV=production npm run serve"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.2.0",
    "@fortawesome/free-brands-svg-icons": "6.2.0",
    "bulma": "0.9.4",
    "cross-env": "7.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.18.13",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-transform-object-assign": "7.18.6",
    "@babel/plugin-transform-runtime": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "@babel/runtime": "7.19.0",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "autoprefixer": "10.4.8",
    "compression-webpack-plugin": "10.0.0",
    "concurrently": "7.3.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.1",
    "cssnano": "5.1.13",
    "esbuild-loader": "2.19.0",
    "eslint": "8.23.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.6.1",
    "postcss": "8.4.16",
    "postcss-loader": "7.0.1",
    "prettier": "2.7.1",
    "sass": "1.54.8",
    "sass-loader": "13.0.2",
    "serve": "14.0.1",
    "style-loader": "3.3.1",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "prettier"
    ],
    "ignorePatterns": [
      "**/.history/*",
      "**/.github/*",
      "**/.devcontainer/*",
      "**/dist/*",
      "**/node_modules/*"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2
  }
}
